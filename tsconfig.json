{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",    // Padrão preferível em bundlers modernos como Webpack
    "importHelpers": true,         // Importa funções auxiliares do tslib para reduzir código duplicado
    "module": "esnext",            // Mantém módulos como ESNext (ajustável se necessário)
    "target": "es2017",            // Target ES2017, pois é mais seguro para navegadores modernos
    "lib": ["es2017", "dom"],      // Alinhando com o target de ES2017 e DOM APIs
    "allowSyntheticDefaultImports": true  // Permite usar imports padrão para compatibilidade com pacotes CJS/ESM
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
